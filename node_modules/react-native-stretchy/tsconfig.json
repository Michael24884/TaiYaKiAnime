{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "strict": true,
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "target": "esnext",
    "outDir": "./lib/dist"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "**/*.spec.ts"
  ],
  "include": ["./lib/src/**/*"]
}
